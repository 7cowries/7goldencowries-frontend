{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "CI= npm run build",
  "outputDirectory": "build",

  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://sevengoldencowries-backend.onrender.com/$1" }
  ],

  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
