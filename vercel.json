{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://sevengoldencowries-backend.onrender.com/api/$1" }
  ],
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.7goldencowries.com" }],
      "destination": "https://7goldencowries.com/:path*",
      "permanent": true
    }
  ]
}
